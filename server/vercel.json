{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "." }
        }
    ],
    "rewrites": [
        {
            "source": "/socket.io/:path*",
            "destination": "/server/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ]
}